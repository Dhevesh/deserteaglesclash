<%include partials/header%>
<div class="container">
    <div class="name">
        <img src="<%=clan.badgeUrls.small%>" alt="badge.png">
        <span class="clash-font"><%=clan.name%></span>
    </div>
    <table class="table table-light">
        <thead class="thead-dark clash-font">
            <tr>
                <th scope="col">Rank</th>
                <th scope="col"></th>
                <th scope="col">Level</th>
                <th scope="col">Name</th>
                <th scope="col">Donations</th>
            </tr>
        </thead>
        <tbody>
            <%clan.memberList.forEach((member)=>{ %>
                <tr>
                    <% var c = ""; %>
                    <% if (member.clanRank > member.previousClanRank){c = "fas fa-sort-up fa-green"; } else if (member.clanRank < member.previousClanRank){ c = "fas fa-sort-down fa-red";} else {c = "fas fa-equals fa-grey"; } %>
                    <td><%=member.clanRank%><span><i class="<%=c%> font-space"></i></span></td>
                    <td><img src="<%=member.league.iconUrls.small%>" alt="league.png"></td>
                    <td><%=member.expLevel%></td>
                    <td>
                        <span class="clash-font">
                            <a href="/members/%23<%=member.tag.substring(1,100)%>"><%=member.name%></a></span>
                            <%if (member.role != "leader" && member.role != "member"){ %>
                                <%if (member.role == "admin") {%>
                                    <div>Elder</div>
                                <%}else if(member.role == "coLeader"){ %>
                                    <div>Co-Leader</div>
                                <%}%>
                            <%} else{ %>
                                <div class="member-role"><%=member.role%></div>
                            <%} %>
                            
                        
                    </td>
                    <td>
                        Troops Donated:
                        <span><%=member.donations%></span>
                    </td>
                </tr>
                
            <%})%>
        </tbody>
        
    </table>
</div>

<%include partials/footer%>